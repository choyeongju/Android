<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_sample"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/layout_background"
    android:clickable="true">

    <TextView
        android:id="@+id/note_sample_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/blue_1"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/note_sample_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/note_sample_subject"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/note_sample_subject"
        android:fontFamily="@font/yeongdeok_haeparang"
        android:textColor="@color/blue_5"
        android:textStyle="bold"
        android:text="Chapter 1 Introduction 필기 정리본">

    </TextView>

    <HorizontalScrollView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_sample_title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_sample_title"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/note_sample_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@color/blue_1"
                android:fontFamily="@font/dovemayo_gothic"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="컴퓨터네트워크잖아"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/note_sample_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/note_sample_tag1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/note_sample_tag1"
                android:background="@color/blue_1"
                android:fontFamily="@font/dovemayo_gothic"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="컴퓨터네트워크"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/note_sample_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/note_sample_tag2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/note_sample_tag2"
                android:background="@color/blue_1"
                android:fontFamily="@font/dovemayo_gothic"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="컴퓨터네트워크니까"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/note_sample_tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/note_sample_tag3"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/note_sample_tag3"
                android:background="@color/blue_1"
                android:fontFamily="@font/dovemayo_gothic"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="컴네임"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/note_sample_tag5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/note_sample_tag4"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/note_sample_tag4"
                android:background="@color/blue_1"
                android:fontFamily="@font/dovemayo_gothic"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="컴퓨터네트워크"
                android:textSize="11dp"></TextView>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/note_sample_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/yeongdeok_font"
        android:text="신용태 교수님"></TextView>

</RelativeLayout>