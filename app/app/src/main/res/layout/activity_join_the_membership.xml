<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        app:title="회원가입"
        app:titleTextColor="@color/white"
        android:background="@color/blue_4"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/IDtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="ID 입력" />

        <EditText
            android:id="@+id/IDinputbox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/IDtext"
            android:inputType="text"/>


        <Button
            android:id="@+id/ID_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/IDinputbox"
            android:layout_toRightOf="@+id/IDinputbox"
            android:text="중복확인"
            android:textSize="10dp"
            android:backgroundTint="@color/blue_4"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue_4"
        android:layout_margin="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/PWinputbox"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint=" 비밀번호를 입력하세요"
            android:layout_marginLeft="50dp"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/PWcheckinputbox"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint=" 비밀번호를 입력하세요"
            android:layout_marginLeft="20dp"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/PW_hint_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="비밀번호 힌트 질문 선택"
            android:textSize="10dp"
            android:backgroundTint="@color/blue_4"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/PW_hint_inputbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="10글자 이내 질문의 답"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue_4"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Nicktext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="닉네임 입력" />

        <EditText
            android:id="@+id/Nickinputbox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Nicktext"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Nickinputbox"
            android:layout_toRightOf="@+id/Nicktext"
            android:text="사용 가능한 닉네임입니다"
            android:visibility="visible"/>

        <Button
            android:id="@+id/Nickname_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/Nickinputbox"
            android:layout_toRightOf="@+id/Nickinputbox"
            android:text="중복확인"
            android:textSize="10dp"
            android:backgroundTint="@color/blue_4"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue_4"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학교 선택"
            android:layout_margin="10dp"
            android:backgroundTint="@color/blue_4"/>

        <Button
            android:id="@+id/jointhemembershop_choice_department_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학과 선택"
            android:layout_margin="10dp"
            android:backgroundTint="@color/blue_4"/>


    </LinearLayout>


    <Button
        android:id="@+id/complete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue_4"
        android:text="완료" />

</LinearLayout>