<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_sample"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/layout_background"
    android:clickable="true">

    <TextView
        android:id="@+id/note_sample_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:background="@color/blue_1">

    </TextView>

    <TextView
        android:id="@+id/note_sample_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/note_sample_subject"
        android:layout_toRightOf="@id/note_sample_subject"
        android:text="Chapter 1 Introduction 필기 정리본">

    </TextView>

    <TextView
        android:id="@+id/note_sample_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/red"
        ></TextView>

    <TextView
        android:id="@+id/note_sample_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/note_sample_tag1"
        android:layout_toRightOf="@id/note_sample_tag1"
        android:background="@color/red"
        ></TextView>

    <TextView
        android:id="@+id/note_sample_tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/note_sample_tag2"
        android:layout_toRightOf="@id/note_sample_tag2"
        android:background="@color/red"
        ></TextView>

    <TextView
        android:id="@+id/note_sample_tag4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/note_sample_tag3"
        android:layout_toRightOf="@id/note_sample_tag3"
        android:background="@color/red"
        ></TextView>

    <TextView
        android:id="@+id/note_sample_tag5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/note_sample_tag4"
        android:layout_toRightOf="@id/note_sample_tag4"
        android:background="@color/red"
        ></TextView>

    <TextView
        android:id="@+id/note_sample_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="신용태 교수님"
        ></TextView>

</RelativeLayout>